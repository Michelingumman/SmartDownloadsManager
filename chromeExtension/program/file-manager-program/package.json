{
  "name": "file-manager-program",
  "version": "1.0.0",
  "description": "A file manager program for Smart Downloads Manager.",
  "main": "src/main.js",  
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Your Name",
  "license": "ISC",
  "keywords": ["file manager", "electron", "smart downloads"],
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.smartdownloadsmanager",
    "productName": "Smart Downloads Manager",
    "directories": {
      "output": "dist"  
    },
    "files": [
      "src/**/*" 
    ],
    "win": {
      "target": "nsis", 
      "icon": "icon.ico"  
    },
    "mac": {
      "target": "dmg", 
      "icon": "icon.icns"  
    },
    "linux": {
      "target": "AppImage", 
      "icon": "icon.png"  
    }
  }
}
