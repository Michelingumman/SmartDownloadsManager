{
    "manifest_version": 3,
    "name": "Smart Downloads Manager",
    "version": "1.0",
    "description": "Manage your downloads by setting expiration times.",
    "permissions": [
    "downloads",
    "storage",
    "nativeMessaging",
    "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icons/48.png",
            "128": "icons/128.png",
            "240": "icons/240.png"
        }
    },
    "icons": {
        "48": "icons/48.png",
        "128": "icons/128.png",
        "240": "icons/240.png"
    }
}